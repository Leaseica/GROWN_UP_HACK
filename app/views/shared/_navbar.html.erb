<div class="navbar navbar-expand-sm navbar-guh">

  <div class="container-fluid">
    <%= link_to root_path, class: "navbar-brand" do %>
      <%= image_tag "brand_logo.svg" %>
       <div class= "brand_heading">GrownUp Hack</div>
    <% end %>

    <div class="d-flex align-items-center pe-5 me-5 gap-3">

      <nav role="navigation" class=" nav-dropdown primary-navigation">
        <ul>
          <li class="link-bold border-right"><a><%= link_to "Accueil", root_path %></a></li>
          <li class="link-bold border-right"><a>Ressources &dtrif;</a>
            <ul class="dropdown">
              <% Category.all.each do |category| %>
                <li class="link-bold">
                  <a><%= link_to category.name, category_path(category.id) %>&dtrif;</a>
                  <ul class="dropdown">
                    <% category.sub_categories.each do |sub_category| %>
                      <li><a><%= link_to sub_category.name, sub_category_path(sub_category.id) %></a></li>
                    <% end %>
                  </ul>
                </li>
              <% end %>
            </ul>
          </li>

          <li>
            <div class="search-component">
              <%= form_with url: search_path, method: :get, local: true, class: "search-form", role: "search" do |form| %>
                <div class="search-box">
                  <%= form.text_field :query, class: "search-input", placeholder: "Rechercher un article, un sujet..", aria: { label: "Search" } %>
                  <%= form.button "", class: "search-button", type: "submit" do %>
                    <i class="fa-solid fa-magnifying-glass"></i>
                  <% end %>
                </div>
              <% end %>
            </div>
          </li>
        </ul>
      </nav>


    </div>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span><i class="fa-solid fa-bars" style="color: #ffffff;"></i></span>
    </button>


    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="d-flex align-items-center navbar-nav me-auto">
        <% if user_signed_in? %>
          <li class="nav-item dropdown">
            <% if current_user.avatar.attached? %>
              <%= image_tag(cl_image_path(current_user.avatar.key, width: 10, height: 10, crop: :thumb, gravity: :face, quality: :auto), alt: "Avatar", class: "avatar dropdown-toggle") %>
            <% else %>
              <%= image_tag("avatar/cat.png", class: "avatar-round avatar dropdown-toggle", alt: "avatar") %>
            <% end %>


            <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
              <a class="dropdown-item"><%= link_to "Profil", user_path(current_user.id), class: "btn btn-small", style: "margin-right: 5px" %></a>
              <a class="dropdown-item"><%= link_to "Deconnexion", destroy_user_session_path, data: {turbo_method: :delete}, class: "btn btn-small" %></a>
            </div>
          </li>
          <% else %>
            <li class="nav-item active">
              <%= link_to "CrÃ©er un compte", new_user_registration_path, class: "btn btn-small outline-nav", style: "margin-right: 5px" %>
            </li>
            <li class="nav-item">
              <%= link_to "Connexion", new_user_session_path, class: "btn btn-small" %>
            </li>
          <% end %>
      </ul>
    </div>

  </div>
</div>

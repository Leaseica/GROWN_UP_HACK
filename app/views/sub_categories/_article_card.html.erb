<% article_images = {
  "les étapes essentielles pour devenir freelance" => "etapes.jpg",
  "stratégies de marketing pour les freelances" => "marketing_article.jpg",
  "gestion financière pour les freelances" => "finance_article.jpg",
  "les outils indispensables pour les freelances" => "photo_freelance_article.jpg",
  "conseils pour réussir en tant que freelance" => "reussir.jpg",
  "réseautage efficace pour les freelances" => "reseau.jpg"
} %>

<% article_images.each do |article_title, image_name| %>
  <% if article.title.downcase == article_title %>
    <div class="subcategory-card" style="background-image: url('<%= image_path(image_name) %>')">
      <div class="layer">
        <div class="content">
          <h2 class="name"><%= article.title %></h2>
        </div>
      </div>
    </div>
  <% end %>
<% end %>

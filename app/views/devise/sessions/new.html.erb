<div class="row justify-content-center">
  <div class="col-lg-8 order-lg-1">
    <h3 class="title py-2 mt-4 text-center">Connexion</h3>
    <div class="card shadow pt-3 m-5">
      <div class="card-body px-5 py-4">
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), data: {turbo: false} ) do |f| %>
          <div class="form-inputs">
            <%= f.input :email,
                        required: false,
                        autofocus: true,
                        input_html: { autocomplete: "email" } %>
            <%= f.input :password,
                        label: 'Mot de passe',
                        required: false,
                        input_html: { autocomplete: "current-password" } %>
            <%= f.input :remember_me,  label: 'Se souvenir de moi', as: :boolean if devise_mapping.rememberable? %>
          </div>
          <div class="form-actions">
            <%= f.button :submit, "Log in", class: "btn btn-small w-100 mb-3"%>
          </div>
        <% end %>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>

<!-- app/views/articles/_form.html.erb -->
<%= simple_form_for @article do |f| %>
  <%= f.input :title, label: "Article Title" %>
  <%= f.input :description, as: :text, label: "Article Description" %>
  <%= f.input :sub_category_id, collection: SubCategory.all, label_method: :name, value_method: :id, prompt: "Choose a Subcategory" %>
  <%= f.input :photo, as: :file %>

  <%= f.button :submit, "Sauvegarder", class: "btn btn-small" %>
<% end %>

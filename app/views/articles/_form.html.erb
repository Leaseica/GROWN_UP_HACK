
<!-- app/views/articles/_form.html.erb -->
<% form_object = @article.new_record? ? [@sub_category, @article] : @article %>

<%= simple_form_for form_object do |f| %>
  <%= f.hidden_field :sub_category_id, value: @sub_category.id %>
  <%= f.error_notification %>

  <h2 class="subtitle-editor">Paramètres de l'article ⬇️</h2>
  <div class="card-editor">
    <div class="form-row">
      <%= f.input :title, label: "Titre de l'article", input_html: { class: 'form-control' }, label_html: { class: 'fw-bold' } %>
    </div>

    <div class="form-row">
      <div class="form-group col-sm">
        <%= f.input :description, as: :text, label: "Description de l'article", input_html: { class: 'form-control', rows: 5 }, label_html: { class: 'fw-bold' } %>
      </div>
    </div>

    <div class="form-row">
      <div class="form-group col-sm">
        <%= f.input :raw_html_content, as: :text, label: "HTML Content", input_html: { class: 'form-control', rows: 15 }, label_html: { class: 'fw-bold' } %>
      </div>
    </div>

    <div class="form-group col-sm">
      <%= f.input :photo, as: :file, label: "Ajouter une photo de couverture", input_html: { class: 'form-control-file' }, label_html: { class: 'fw-bold' } %>
    </div>
  </div>

  <h2 class="subtitle-editor">Contenu de l'article ⬇️</h2>
  <div class="form-row">
    <div class="form-group col-sm">
      <%= f.input :paragraph1, label: false, input_html: { class: 'form-control tinymce', rows: 10 } %>
      <%= tinymce %>
    </div>
  </div>

  <div class="form-row">
    <div class="form-group col-sm">
      <%= f.button :submit, "Submit", class: "btn btn-green" %>
      <%= f.button :button, "Save Draft", class: "btn btn-gray" %>
    </div>
  </div>
<% end %>

<h2 class="ms-5 mt-3"><%= @user.first_name %> <%= @user.last_name %></h2>

<div class="row">
  <div class="m-3"> <p style="display:inline"><strong>Email :</strong> <%= @user.email %> </p> <button class="btn btn-small">Modifier</button> </div>

  <div class="m-3"> <p style="display:inline"><strong>Métier :</strong> <%= @user.occupation %> </p> <button class="btn btn-small">Modifier</button> </div>

  <div class="m-3"> <p style="display:inline"><strong>Adresse :</strong> <%= @user.address %> </p> <button class="btn btn-small">Modifier</button> </div>

  <div class="m-3"> <p><strong>Date de naissance :</strong> <%= @user.birthday %> </p> </div>

  <div class="m-3"> <p><strong>Nationalité :</strong> <%= @user.nationality %> </p> </div>

  <div class="m-3"> <p><strong>Sécurité sociale :</strong> <%= @user.social_security %> </p> </div>
</div>

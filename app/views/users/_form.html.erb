<!-- app/views/users/_form.html.erb -->

<div class="row justify-content-center">
  <div class="col-lg-8 order-lg-1">
    <div class="card shadow m-5">
      <div class="header mt-4">
        <div class="row align-items-center pt-2">
          <h3 class="bold-xxl py-2">Mon compte</h3>
        </div>
      </div>
      <div class="card-body">
        <%= simple_form_for @user, html: { class: 'form' } do |f| %>
          <h6 class="heading-small text-muted mb-4">Information de l'utilisateur</h6>
          <div class="pl-lg-4">
            <div class="row">
              <div class="col-lg-6">
                <%= f.input :first_name, label: 'Prénom', input_html: { class: 'form-control form-control-alternative' } %>
              </div>
              <div class="col-lg-6">
                <%= f.input :last_name, label: 'Nom de famille', input_html: { class: 'form-control form-control-alternative' } %>
              </div>
            </div>
            <div class="row">
              <div class="col-lg-6">
                <%= f.input :email, input_html: { class: 'form-control form-control-alternative' } %>
              </div>
              <div class="col-lg-6">
                <%= f.input :birthday, as: :string, label: 'Date de naissance', input_html: { class: 'form-control form-control-alternative', type: 'date' }, wrapper: false %>
              </div>
            </div>
          </div>
          <hr class="my-4">
          <!-- Contact information -->
          <h6 class="heading-small text-muted mb-4">Informations de contact</h6>
          <div class="pl-lg-4">
            <div class="row">
              <div class="col-md-12">
                <%= f.input :address, label: 'Adresse', input_html: { class: 'form-control form-control-alternative' } %>
              </div>
            </div>
            <div class="row">
              <div class="col-md-12">
                <%= f.input :nationality, label: 'Nationalité', input_html: { class: 'form-control form-control-alternative' } %>
              </div>
            </div>
            <div class="row">
              <div class="col-md-12">
                <%= f.input :social_security, label: 'Sécurité sociale', input_html: { class: 'form-control form-control-alternative' } %>
              </div>
            </div>
          </div>
          <hr class="my-4">
          <!-- Submit -->
          <div class="pl-lg-4">
            <div class="form-group">
              <%= f.button :submit, "Sauvegarder", class: "btn btn-small" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

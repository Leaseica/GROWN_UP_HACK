<!-- app/views/users/_form.html.erb -->
<div class="mb-5 px-5  py-5 bg-primary">
  <h3 class="title xl text-center mt-5">Mon compte</h3>

  <div class="row justify-content-center mb-5">
    <div class="col-lg-8 order-lg-1">
      <div class="card shadow mt-4 0">

        <div class="card-body px-3 py-3 pt-4">

          <%= simple_form_for @user, html: {  data: { controller: "datepicker" } } do |f| %>
            <!-- Link to registrations/edit -->

            <h6 class="bold-l mb-4">Identifiants de connexion</h6>
            <div class="pl-lg-4">
              <div class="row">
                <div class="col-lg-6">
                  <%= f.input :email, label: 'Adresse mail' %>
                </div>
                <div class="col-lg-5">
                  <div class="row">
                    <%= f.label :password, 'Mot de passe', class: 'mb-2' %>
                     <!-- Button trigger modal Modifier MDP -->
                    <button type="button" class="btn btn-outline ms-2" data-bs-toggle="modal" data-bs-target="#PasswordModal">
                      <i class="fa-solid fa-user-pen me-2"></i> Modifier mon mot de passe
                    </button>
                  </div>

                </div>
              </div>

            </div>
            <hr class="my-4">

            <!-- Contact information -->
            <h6 class="bold-l mb-4">Informations personnelles</h6>
            <div class="blockquote-footer">Ces informations sont enregistrées automatiquement lors de la complétion d'un formulaire dans le but de faciliter vos saisies futures. Vous avez la possibilité de désactiver cette option à tout moment.</div>
            <div class="pl-lg-4">
              <div>
                <%= f.input :auto_fill, as: :boolean, label: 'Activer la saisie automatique', input_html: { class: 'form-check-input' } %>
              </div>
              <div class="row">
                <div class="col-lg-4">
                  <%= f.input :first_name, label: 'Prénom' %>
                </div>
                <div class="col-lg-4">
                  <%= f.input :last_name, label: 'Nom de famille' %>
                </div>
              </div>

              <div class="row">
                <div class="col-3">
                  <%= f.input :birthday, as: :string, label: 'Date de naissance', input_html: { data: { datepicker_target: "birthday" }, style: 'width: 80%' } %>
                </div>

                <div class="col-3">
                  <%= f.input :gender, label: 'Genre', collection: User.genders.values, prompt: 'Choisissez un genre', input_html: { class: 'custom-select'} %>
                </div>

              </div>

              <div class="row">
                 <div class="col-lg-4">
                   <%= f.input :phone_number, label: 'Numéro de téléphone', input_html: { class: 'form-control form-control-alternative' } %>
                </div>
                <div class="col-lg-8">
                  <%= f.input :address, label: 'Adresse', input_html: { class: 'form-control form-control-alternative' } %>
                </div>

              </div>
              <div class="row">
                <div class="col-lg-3">
                  <%= f.input :city, label: 'Ville', input_html: { class: 'form-control form-control-alternative' } %>
                </div>
                <div class="col-lg-2">
                  <%= f.input :zip_code, label: 'Code postal', input_html: { class: 'form-control form-control-alternative' } %>
                </div>
                <div class="col-lg-3 ">
                  <%= f.input :country, label: 'Pays', collection: countries_list, prompt: 'Choisissez une nationalité', input_html: { class: 'form-control' }, priority: [ "France" ] %>
                </div>
              </div>

              <div class="row">
                <div class="col-lg-8">
                  <%= f.input :occupation, label: 'Occupation', input_html: { class: 'form-control form-control-alternative' } %>
                </div>
              </div>
            </div>

            <hr class="my-4">
            <!-- Submit -->
            <div class="pl-lg-4">
              <div class="form-group">
                <%= f.button :submit, "Sauvegarder", class: "btn btn-small" %>
              </div>
            </div>


          <% end %>
        </div>
      </div>
    </div>
  </div>

  <!-- Delete my account -->
  <div class="row justify-content-center">
    <div class="col-lg-8 order-lg-1">
      <div class="card shadow mt-4">
        <div class="card-body">
          <h6 class="bold-l mb-4">Supprimer mon compte</h6>
          <div class="blockquote-footer">Si tu es sûr de vouloir nous quitter, clique ici pour supprimer ton compte. On espère te revoir bientôt !</div>
          <div class="pl-lg-4">
            <div class="form-group">
              <%= button_to registration_path(@user), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, class: 'btn btn-outline danger' do %>
                <i class="fa-solid fa-ban"></i> Supprimer mon compte
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>


  <!-- Modal new-password-->
  <div class="modal fade" id="PasswordModal" tabindex="-1" aria-labelledby="ModalPassword" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h1 class="modal-title fs-3" id="ModalPassword"><i class="fa-solid fa-user-lock me-2"></i> Modifier mon mot de passe</h1>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <%= simple_form_for(@user, url: registration_path(@user), html: { method: :put }) do |f| %>
            <%= f.input :current_password,
                        label: "Mot de passe actuel",
                        required: true,
                        input_html: { autocomplete: "current-password" } %>
            <%= f.input :password,
                        label: "Nouveau mot de passe",
                        required: false,
                        input_html: { autocomplete: "new-password" } %>
            <%= f.input :password_confirmation,
                        label: "Confirmer le mot de passe",
                        required: false,
                        input_html: { autocomplete: "new-password" } %>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fermer</button>
          <%= f.button :submit, "Sauvegarder", class:'btn btn-small' %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>



<!-- app/views/searches/search.html.erb -->
<h1>Search Results for "<%= @query %>"</h1>

<% if @results.present? %>
  <ul>
    <% @results.each do |result| %>
      <li>
        <%= link_to (result.searchable.respond_to?(:name) ? result.searchable.name : result.searchable.title), result.searchable %>
      </li>
    <% end %>
  </ul>
<% else %>
  <p>No results found</p>
<% end %>
